{
  "name": "gridix",
  "version": "1.0.0",
  "private": true,
  "description": "Donjon game maker",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/damiflore/gridix"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "importmap": "./project.importmap",
  "exports": {
    ".": {
      "import": "./main.js",
      "require": "./dist/commonjs/main.cjs"
    }
  },
  "module": "main.js",
  "files": [
    "/dist/",
    "/src/",
    "/main.js"
  ],
  "scripts": {
    "start": "npm run dev -- --open",
    "dev": "node ./scripts/dev.mjs",
    "build:local": "node ./scripts/build.mjs",
    "build:prod": "node ./scripts/build.mjs --prod",
    "build:serve": "node ./scripts/build_serve.mjs --open",
    "test": "node ./script/test.mjs",
    "eslint": "npx eslint .",
    "prettier": "prettier --write ."
  },
  "dependencies": {
    "@jsenv/pwa": "6.1.3",
    "@jsenv/server": "15.3.1",
    "black-engine": "0.5.12",
    "page-lifecycle": "0.1.2",
    "phaser": "3.86.0",
    "preact": "10.24.3",
    "@preact/signals": "1.3.0"
  },
  "devDependencies": {
    "@babel/plugin-transform-react-jsx": "7.25.9",
    "@babel/plugin-syntax-import-attributes": "7.26.0",
    "@jsenv/assert": "4.4.1",
    "@jsenv/core": "39.5.17",
    "@jsenv/eslint-config-relax": "1.2.12",
    "@jsenv/https-local": "3.2.11",
    "@jsenv/plugin-commonjs": "2.8.29",
    "@jsenv/plugin-explorer": "1.0.50",
    "@jsenv/plugin-preact": "1.6.24",
    "@jsenv/test": "3.5.20",
    "eslint": "9.14.0",
    "open": "10.1.0",
    "playwright": "1.48.2",
    "prettier": "3.3.3",
    "prettier-plugin-organize-imports": "4.1.0"
  }
}
